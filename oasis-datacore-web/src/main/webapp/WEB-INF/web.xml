<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
   <display-name>OASIS Datacore</display-name>
    
   <context-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:oasis-datacore-rest-server-context.xml</param-value>
   </context-param>
 
   <listener>
      <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
   </listener>
 
   <servlet>
      <servlet-name>CXFServlet</servlet-name>
      <display-name>CXF Servlet</display-name>
      <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
   </servlet>
 
 
   <!--
   servlet mappings :
   (see http://www.coderanch.com/t/366340/Servlets/java/servlet-mapping-url-pattern)
   -->
 
   <servlet-mapping>
      <servlet-name>default</servlet-name><!-- mapping to static resources servlet -->
      <url-pattern>/swagger-ui/*</url-pattern><!-- path mapping to swagger UI -->
   </servlet-mapping>
 
   <servlet-mapping>
      <servlet-name>CXFServlet</servlet-name>
      <!-- url-pattern>/services/*</url-pattern --><!-- NB. alternate sub-mapping (default for cxf) -->
      <url-pattern>/</url-pattern><!-- mapped as the root servlet ; TODO root page with links -->
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>CXFServlet</servlet-name>
      <url-pattern>/*</url-pattern><!-- else Swagger JAXRS api-docs resource "not found"
      NB. can be done in a single servlet-mapping since servlet 2.5 -->
   </servlet-mapping>
 
</web-app>